  <h1>SURGE Light</h1>
  <p class="subtitle">光のように、知をたどる。</p>
  <div class="search-box">
    <select id="engine">
      <option value="https://www.google.com/search?q=">Google</option>
      <option value="https://www.bing.com/search?q=">Bing</option>
      <option value="https://search.yahoo.co.jp/search?p=">Yahoo! Japan</option>
      <option value="https://ja.wikipedia.org/wiki/Special:Search?search=">Wikipedia（日本語）</option>
      <option value="https://kotobank.jp/word/">コトバンク</option>
      <option value="https://www.weblio.jp/content/">Weblio</option>
      <option value="https://www.youtube.com/results?search_query=">YouTube</option>
      <option value="https://ad-hub.f5.si/surge?q=">SURGE</option>
    </select>
    <input type="text" id="query" placeholder="検索ワードを入力…" />
    <button onclick="search()">検索</button>
  </div>

  <script>
    function search() {
      const engine = document.getElementById('engine').value;
      const query = encodeURIComponent(document.getElementById('query').value.trim());
      if (query) {
        window.open(engine + query, '_blank');
      }
    }
  </script>
